#ifndef __OSGCAL__MESHLOADER_H__
#define __OSGCAL__MESHLOADER_H__

#include <stdexcept>

#include <cal3d/cal3d.h>

#include <osgCal/MyCalHardwareModel>
#include <osgCal/Export>
#include <osgCal/MeshData>

namespace osgCal
{
    // -- MeshData I/O --
	class CoreModelGPU;
    /**
     * Name of file with preprocessed meshes.
     */
    OSGCAL_EXPORT std::string meshesCacheFileName( const std::string& cfgFileName );

    OSGCAL_EXPORT void loadMeshes( const std::string&  fileName,
                                   const CalCoreModel* calCoreModel,
                                   MeshesVector& meshes )
        throw (std::runtime_error);

    OSGCAL_EXPORT void saveMeshes( const CalCoreModel* calCoreModel,
                                   const MeshesVector& meshes,
                                   const std::string&  fileName )
        throw (std::runtime_error);

    OSGCAL_EXPORT void loadMeshes( CalCoreModel* calCoreModel,
                                   MeshesVector& meshes )
        throw (std::runtime_error);

OSGCAL_EXPORT void setupVRAMforAnimationInstancing(CoreModelGPU* calCoreModelGPU);

//MetaAnimation


typedef  float** BoneData;//[NUMMESHES]   [MAXBONEPERMESH][TOTALKEYFRAME][vec4]
OSGCAL_EXPORT void sampleAnimation(CalModel *m_calModel, CalHardwareModel *m_calHardwareModel, int m_currentMeshId,
int baseKeyFrame,int endKeyFrame,
BoneData &bonesTransform, std::vector<GLuint>&morphids, std::vector<GLfloat>&morphWeigth);
}; // namespace osgCal

#endif
